CREATE VIEW 
	infoCrime as 
SELECT 
	criminoso.nome "criminosoNome",
    vitima.nome "vitimaNome",
    delito.nome "delitoNome",
    crime.local "crimeLocal",
    crime.dataCrime "crimeData",
    crime.descricao "crimeDescricao"
FROM crime
	INNER JOIN criminoso ON crime.criminoso = criminoso.id
    INNER JOIN vitima ON crime.vitima = vitima.id
    INNER JOIN delito ON crime.delito = delito.id;